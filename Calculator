
x = int(input("Upišite prvi broj: "))

y = int(input("Upišite drugi broj: "))

operation = input("Što želite izračunati (+, -, *, /): ")

if operation == "+":
    print(x + y)
elif operation == "-":
    print(x - y)
elif operation == "*":
    print(x * y)
elif operation == "/":
    print(x / y)
else:
    print("Nešto niste ispravno upisali")
